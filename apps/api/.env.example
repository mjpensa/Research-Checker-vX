# Application
DEBUG=true
ENVIRONMENT=development

# Database (Railway provides this automatically as DATABASE_URL)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Redis (Railway provides this automatically as REDIS_URL)
REDIS_URL=${{Redis.REDIS_URL}}

# Gemini API (Add your API key from Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/gemini-2.5-flash-preview-09-2025

# Authentication (OPTIONAL - only needed for Phase 4 frontend)
# CLERK_SECRET_KEY=
# CLERK_PUBLISHABLE_KEY=

# Monitoring (OPTIONAL)
# SENTRY_DSN=

# Storage (Railway provides persistent volumes)
UPLOAD_DIR=/mnt/uploads
EXPORT_DIR=/mnt/exports

# Server (Railway sets PORT automatically)
# PORT=8000
